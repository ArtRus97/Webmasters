<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.example.webmasters.models.graphic_design.Animation" />
        <!-- Takes List of Animation(s) as "input" -->
        <variable
            name="animations"
            type="java.util.List&lt;Animation>" />
        <!-- AnimationAdapter used by the RecyclerView -->
        <variable
            name="adapter"
            type="androidx.recyclerview.widget.RecyclerView.Adapter" />

    </data>

    <com.example.webmasters.ui.shared.ExtendedCardView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:title="Animation">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.recyclerview.widget.RecyclerView
                tools:listitem="@layout/list_item_animation"
                android:id="@+id/recyclerAnimation"
                android:layout_width="0dp"
                app:layout_constraintHeight_max="250dp"
                android:layout_height="wrap_content"
                app:adapter="@{adapter}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <SeekBar
                android:id="@+id/seekAnimationInterval"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/recyclerAnimation" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.example.webmasters.ui.shared.ExtendedCardView>
</layout>